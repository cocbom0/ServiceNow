        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	if(!current.variables.serial_number.nil() && !current.variables.operating_hours.nil()){

	var installBase = current.variables.serial_number;
	var engineHours = current.variables.operating_hours;
	var commissioning_date = current.variables.commissioning_date;
	
	var installBaseGr = new GlideRecord('sn_install_base_item');
	installBaseGr.get(installBase);

	var installBaseSerialNumber = installBaseGr.number;
	var engineGr = new GlideRecord('alm_hardware');
	engineGR.addQuery('serial_number=' + installBaseSerialNumber);

	if (engineGr) {
		engineGr.u_operating_hours = engineHours;
		engineGr.u_commissioning_date = commissioning_date;
		engineGr.update();
	}	
	
}
})(current, previous);]]></script>
