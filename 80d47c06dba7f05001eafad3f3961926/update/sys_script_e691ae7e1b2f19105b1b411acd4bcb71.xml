        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var gr = new GlideRecord("x_liisa_support_ca_services");
        gr.addQuery("number", current.getValue('parent'));
        gr.query();

//		 gs.addInfoMessage('Include answer: ' +current.closed_at);
//		 gs.addInfoMessage('Include answer: ' +current.u_task_sub_topic);
	
	
		if(current.closed_at == ''){
			if(gr.get(current.getValue('parent'))){
				gr.setValue('u_sla_blocking_reason', current.u_task_sub_topic);
				gr.update();
			}
		}
	
		if(current.closed_at != ''){
			if(gr.get(current.getValue('parent'))){
				gr.setValue('u_sla_blocking_reason', '');
				gr.update();
			}
		}

})(current, previous);]]></script>
